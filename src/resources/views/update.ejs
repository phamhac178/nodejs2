<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('./partials/header') %>

</head>
<style>
  body{
    background-color: #f6f6f6;
  }
  .group{
    width: 100%;
    height: auto;
    margin-top: 15px;
  }
  .item{
    width: 255px;
    height: 300px;
    display: inline-block;
    padding: 15px;
    margin-right: 15px;
    margin-bottom: 15px;
    box-shadow: 0 6px 15px rgb(36 37 38 / 8%);
    background-color: #fff;
    border-radius: 15px;
    
  }
  .title, .time , .fun{
    width: 100%;
    
  }
  .title {
    height: 150px;
    color: #f49967;
  }
  .time {
    height: 100px;
    color: #3498db;
    
  }
  .fun {
    height: 50px;
  }
  
</style>
<body>

  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" href="#">Home </a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
      aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item active">
          <a class="nav-link" href="#">Add todo<span class="sr-only">(current)</span></a>
        </li>
        <li class="nav-item ">
          <a class="nav-link" href="/logout">Log out<span class="sr-only">(current)</span></a>
        </li>

      </ul>
      <form class="form-inline my-2 my-lg-0">
        
      </form>
    </div>
  </nav>
  <div class="container mt-5">
    <form action="/update/<%= todo.id%>" class="form" method="POST">
      <div class="form-group">
        <input type="text" name="title" value="<%= todo.title%>" class="form-control" required placeholder="Thêm công việc cần phải làm">
      </div>
      <div class="form-group">
        <label>Chọn thời gian bắt đầu</label>
        <input type="datetime-local" name="begin" value="<%= todo.begin%>" id="begin" class="form-control" placeholder=""  required>
      </div>
        <div class="form-group">
          <label>Chọn thời gian kết thúc</label>
          <input type="datetime-local" name="end" id="end" min="<%= todo.begin%>"  value="<%= todo.end%>" class="form-control" placeholder="" required>
        </div>
        <div class="form-group">
            <label>Trạng thái</label>
            <select class="form-select form-control" name="status">
                <% if( todo.status == 0){ %> 
                    <option selected value="0">Chưa hoàn thành</option>
                    <option  value="1">Đã hoàn thành</option>
                 <% }else { %>
                    <option selected value="1">Đã hoàn thành</option>
                    <option  value="0">Chưa hoàn thành</option>
                    <%} %>
            </select>

        </div>
      <div class="form-group"><input type="submit" value="Cập nhập" class="btn btn-md btn-primary"></div>
      
    </form>
    
  </div>
  <%- include('./partials/footer') %>

  <script>
    var begin = document.getElementById('begin');
    var end = document.getElementById('end');

    begin.addEventListener('change', function(e){
      console.log(e.target.value)
      end.setAttribute('min',e.target.value);
    });

  </script>
</body>

</html>

