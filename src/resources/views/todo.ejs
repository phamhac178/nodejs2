<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/header') %>
</head>
<body>


    <div class="container mt-5">
        <form action="/create" class="d-flex" method="POST">
            <input type="text" name="title" class="form-control" placeholder="enter todo">
            <input type="submit" value="add-todo" class="btn btn-md btn-primary">
        </form>
        <ul class="list-group mt-5">
            <% todos.forEach(item=> { %>
                <li class="list-group-item">
                    <%= item.title %> | <%= item.createdAt.toDateString()%> <a href="/<%= item.id %> ">Delete</a>


                </li>
                <% }) %>
        </ul>
    </div>
<%- include('./partials/footer') %>

</body>
</html>